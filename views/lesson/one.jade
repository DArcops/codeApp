extends ../layout2.jade


block content
  .row(ng-controller='List_Exercies')
    .col-lg-9.col-xlg-10.col-md-8
      .card
        #summernote(style="margin-left:30px;margin-top:30px;margin-right:30px;margin-bottom:30px;")

    .col-lg-3.col-xlg-2.col-md-4
      h3.text-themecolor.m-b-0.m-t-0(style='margin-bottom:13%; text-align:center;') Ejercicios
      .stickyside
        #top-menu.list-group
          button.list-group-item.text-themecolor(ng-repeat='exercise in exercises' ng-click='selectExercise(exercise.id)') {{$index+1+".- "+exercise.name}}
      button.btn-rounded.btn-success(style="margin-left:15%;margin-top:10%" ng-show="administrator" ng-click="addExercise()")  Agregar Ejercicio


    script(src="./javascripts/angular.min.js")
    script(src="./javascripts/jquery-2.1.1.min.js")
    script(src="./javascripts/controllers/list_exercises.js")
    script.
      $(document).ready(function() {
      $('#summernote').summernote();
      });
