extends ../layout.jade

link(href='../css/stylesheets/style.css', type='text/css'. rel='stylesheet')


block content
  div.row.login-container
    form.col.s12.md8.l10(method="post" action="/welcome" style="margin-top:150px;margin-left:450px;")
      .row
        .input-field.col.s12.md4.l4
          input#name.validate(type='text', name="user_name")
          label(for='name') Nombre

      .row
        .input-field.col.s12.md4.l4
          input#email.validate(type='email', name="email")
          label(for='email', data-error='wrong', data-success='right') Email


      .row
        .input-field.col.s12.md4.l4
          input#password.validate(type='password', name="password")
          label(for="password") Password

      button.btn.waves-effect.waves-light.col.s12.md4.l4(type='submit',name='action')
        |Registrarse

      if email_used
        .row
          span Este correo ya se encuentra registrado
