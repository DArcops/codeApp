extends ../layout.jade

link(href='../css/stylesheets/style.css', type='text/css'. rel='stylesheet')


block content
  div.row.login-container
    form.col.s12.md8.l10(style="margin-top:150px;margin-left:450px;" ng-submit='submit2()', ng-controller='Register')
      .row
        .input-field.col.s12.md4.l4
          input#name.validate(type='text', name="user_name" ng-model="username")
          label(for='name') Nombre

      .row
        .input-field.col.s12.md4.l4
          input#email.validate(type='email', name="email" ng-model="email")
          label(for='email', data-error='wrong', data-success='right') Email


      .row
        .input-field.col.s12.md4.l4
          input#password.validate(type='password', name="password" ng-model="pass")
          label(for="password") Password

      button.btn.waves-effect.waves-light.col.s12.md4.l4(type='submit',name='action')
        |Registrarse

      if email_used
        .row
          span Este correo ya se encuentra registrado

      script(src="./javascripts/angular.min.js")
      script(src="./javascripts/controllers/register.js")
      script(src="./javascripts/jquery-2.1.1.min.js")
