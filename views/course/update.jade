extends ../layout2.jade

block content

  .col-lg-8.col-xlg-9.col-md-7.hoverable(style="display: inline-block; margin-left:10%; margin-top:4%"  ng-controller='Update_Course')
    .card
      .card-block
        form.form-horizontal.form-material
          .form-group
            label.col-md-12 Nombre del Curso
            .col-md-12
              input.form-control.form-control-line(type='text', ng-model="course_name")
        .form-group
          label.col-md-12 Descripción Corta
          .col-md-12
            input.form-control.form-control-line(type='text', ng-model="short_description")
        .form-group
          label.col-md-12 Descripción Larga
          .col-md-12
            textarea.form-control.form-control-line(rows='5', ng-model="course_description")
        .form-group
          .col-sm-12
            button.btn.btn-success(type='submit',name='action' ng-click='submit()') Actualizar


  script(src="./javascripts/angular.min.js")
  script(src="./javascripts/controllers/update_course.js")
  script(src="./javascripts/jquery-2.1.1.min.js")
