extends ../layout2.jade


block content
  .col-lg-4.col-xlg-5.col-md-3.hoverable(style="display: inline-block; margin-left:5%;" , ng-controller='New_Exercise')
    .card
      .card-block
        #summernote
          p Escribe las Instrucciones del Ejercicio


  .col-lg-4.col-xlg-5.col-md-3.hoverable(style="display: inline-block; margin-left:5%;",  ng-controller='New_Exercise')
    .card
      .card-block
        .form-group
          label.col-sm-12 Selecciona Curso
          .col-sm-12
            select.form-control.form-control-line(ng-model='selectedCourse', ng-change='change()')
              option(ng-repeat='course in courses' value='{{course.id}}'){{course.name}}
        .form-group
            label.col-sm-12 Selecciona Nivel
            .col-sm-12
              select.form-control.form-control-line(ng-model='selected_level' ng-change='changeLevel()')
                option(ng-repeat='level in levels' value='{{level.id}}'){{level.number}}
        .form-group
            label.col-sm-12 Selecciona Lecci√≥n
            .col-sm-12
              select.form-control.form-control-line(ng-model='leccionSeleccionada')
                option(ng-repeat='leccion in lecciones' value='{{leccion.id}}'){{leccion.name}}
        .form-group
            label.col-md-12 Nombre del Ejercicio
            .col-md-12
              input.form-control.form-control-line(type='text' ng-model='exercise_name')
        .form-group
            label.col-md-12 Input
            .col-md-12
              textarea.form-control.form-control-line(rows='5', ng-model="dataInput")
        .form-group
            label.col-md-12 Output
            .col-md-12
              textarea.form-control.form-control-line(rows='5', ng-model="dataOutput")


          .form-group
            .col-sm-12
              button.btn.btn-success(type='submit',name='action' ng-click='submit()') Crear


      script(src="./javascripts/angular.min.js")
      script(src="./javascripts/jquery-2.1.1.min.js")
      script(src="./javascripts/controllers/new_exercise.js")
      script.
        $(document).ready(function() {
        $('#summernote').summernote();
        });
