extends ../layout.jade

link(href='../css/stylesheets/style.css', type='text/css'. rel='stylesheet')


block content
  .row
     form.col.s12.m8.l6(style="position: absolute; left: 45%; margin-left: -100px; padding-top:200px;" ng-submit='submit()', ng-controller='Login')
        .row
          .input-field.col.s12.md12.l6()
            input#email.validate(type="email", name="email", ng-model="email")
            label(for='email') Email

